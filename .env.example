# MCP Switch Manager Addon Configuration

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
MCP_PORT=8087
MCP_HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_DIR=./logs

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# VIMINS SWITCH CONFIGURATION
# =============================================================================
# Core Switch 1 (Office)
VIMINS_CORE1_IP=10.202.28.9

# Core Switch 2 (Bedroom)
VIMINS_CORE2_IP=10.202.28.10

# Vimins Authentication
VIMINS_USERNAME=admin
VIMINS_PASSWORD=admin
VIMINS_TIMEOUT=15000

# =============================================================================
# SODOLA SWITCH CONFIGURATION
# =============================================================================
# Office Switch
SODOLA_OFFICE_IP=10.202.28.13

# Proxmox Host Switch
SODOLA_PROXMOX_IP=10.202.28.12

# Backup Switch
SODOLA_BACKUP_IP=10.202.28.14

# Sodola Authentication
SODOLA_USERNAME=admin
SODOLA_PASSWORD=admin
SODOLA_TIMEOUT=15000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Health check interval (milliseconds)
HEALTH_CHECK_INTERVAL=300000

# Diagnostic interval (milliseconds)
DIAGNOSTIC_INTERVAL=900000

# Alert thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
PORT_ERROR_THRESHOLD=0.01

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION=30
BACKUP_DIR=./data/backups

# Git backup configuration
GIT_BACKUP_ENABLED=false
GIT_BACKUP_REPO=

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
SESSION_SECRET=mcp-switch-manager-secret-change-in-production
JWT_SECRET=mcp-jwt-secret-change-in-production
ENCRYPTION_KEY=mcp-encryption-key-change-in-production

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_VLAN_MANAGEMENT=true
FEATURE_REAL_TIME_DIAGNOSTICS=true
FEATURE_CONFIG_MANAGEMENT=true
FEATURE_CROSS_SWITCH_AUTOMATION=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_ADVANCED_REPORTING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true for development debugging
DEBUG_SWITCH_COMMUNICATION=false
DEBUG_VLAN_OPERATIONS=false
DEBUG_AUTHENTICATION=false

# Mock switch responses for testing
MOCK_SWITCHES=false
MOCK_AUTHENTICATION=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# These are used when running in Docker
CONTAINER_NAME=mcp-switch-manager
RESTART_POLICY=unless-stopped

# =============================================================================
# HARBOR REGISTRY CONFIGURATION
# =============================================================================
HARBOR_REGISTRY=hl-harbor.techpad.uk
HARBOR_PROJECT=mcp
HARBOR_USERNAME=
HARBOR_PASSWORD=

# =============================================================================
# NETWORK TOPOLOGY OVERRIDES
# =============================================================================
# Override default topology if needed
# CUSTOM_TOPOLOGY_FILE=./config/custom-topology.json

# =============================================================================
# VLAN CONFIGURATION OVERRIDES
# =============================================================================
# Override default VLAN configurations
# CUSTOM_VLAN_CONFIG_FILE=./config/custom-vlans.json

# Management VLAN ID
MANAGEMENT_VLAN=500

# Reserved VLAN IDs (comma-separated)
RESERVED_VLANS=1,1002,1003,1004,1005

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Connection pool settings
MAX_CONCURRENT_CONNECTIONS=10
CONNECTION_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Cache settings
ENABLE_CACHING=true
CACHE_TTL=300000

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Master proxy configuration
MCP_MASTER_PROXY=http://master-proxy:9090
MCP_HOSTNAME=switch-manager-addon

# External service integrations
PHPIPAM_ENABLED=false
PHPIPAM_URL=
PHPIPAM_TOKEN=

VAULT_ENABLED=false
VAULT_URL=
VAULT_TOKEN=

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email notifications
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
EMAIL_TO=

# Webhook notifications
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# MAINTENANCE CONFIGURATION
# =============================================================================
# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance

# Automatic updates
AUTO_UPDATE_ENABLED=false
UPDATE_CHECK_INTERVAL=86400000

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# Compliance policies
COMPLIANCE_ENABLED=true
SECURITY_POLICY=security_baseline
PERFORMANCE_POLICY=performance_standards

# Audit logging
AUDIT_ENABLED=true
AUDIT_RETENTION=90

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Custom switch drivers
CUSTOM_DRIVERS_PATH=./drivers

# Plugin configuration
PLUGINS_ENABLED=false
PLUGINS_PATH=./plugins

# Advanced logging
STRUCTURED_LOGGING=true
LOG_CORRELATION_ID=true

# Metrics collection
METRICS_ENABLED=false
METRICS_PORT=9090
METRICS_PATH=/metrics
